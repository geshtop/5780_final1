        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        FontSize="16"
        Title="HostList" Height="600" Width="800"  Left="30" Top="30">
    <ScrollViewer  Height="590">
    <Grid >
        <Grid Name="HostsGrid"   HorizontalAlignment="Stretch" Height="auto" VerticalAlignment="Stretch" Width="auto" Grid.Row="0" Margin="0,35,0,-35" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="100" />

            </Grid.RowDefinitions>
            <Label Content="רשימת מארחים" FontSize="35" HorizontalAlignment="Left" Height="48" Margin="0,-40,0,0" VerticalAlignment="Top" Width="455"/>
            <Label  Content="תעודת זהות" HorizontalAlignment="Left" Height="28" Margin="10,63,0,0" VerticalAlignment="Top" Width="122"/>

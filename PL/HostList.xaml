                <Image Source="/Resource/icons8-return-40.png"/>
               
            </DockPanel>
        </Button>
        <Button Background="Transparent"
        BorderBrush="Transparent"
        BorderThickness="0"  Width="40" Height="40"  Click="AddHost_Click" Margin="657,24,79,536" >
